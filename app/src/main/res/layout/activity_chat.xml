<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/auth_form_background"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvChannelName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="General Chat"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorText"/>

        <ImageButton
            android:id="@+id/btnChannelSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_menu"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/colorText"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lvMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:background="@drawable/auth_form_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/colorSurface">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRecordVoice"
            style="@style/Widget.Dumb.Button.Outlined"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Record"
            android:textSize="12sp"
            app:icon="@drawable/ic_mic"
            app:iconGravity="textStart"
            app:iconPadding="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartCall"
            style="@style/Widget.Dumb.Button.Outlined"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Call"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            app:icon="@drawable/ic_chat"
            app:iconGravity="textStart"
            app:iconPadding="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@drawable/auth_form_background">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Dumb.TextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type message...">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="14sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSend"
            style="@style/Widget.Dumb.Button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Send"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            app:icon="@drawable/ic_send"
            app:iconGravity="textStart"
            app:iconPadding="4dp"/>

    </LinearLayout>

</LinearLayout>
